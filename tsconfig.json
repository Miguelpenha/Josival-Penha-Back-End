{
  "exclude": ["jest.config.ts"],
  "compilerOptions": {
    "jsx": "react",
    "strict": false,
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2021",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}